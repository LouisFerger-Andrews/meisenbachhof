  arrows: true,
  responsive: [
    {
      breakpoint: 1200,  // Adjusted breakpoint for larger screens
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3,
        infinite: true,
      }
    },
    {
      breakpoint: 768,  // Adjusted breakpoint for smaller screens
      settings: {
        slidesToShow: 1,  // Show 1 product for smaller devices
        slidesToScroll: 1
      }
    }
  ]
});
</script>
